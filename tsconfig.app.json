{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true, // Allow JavaScript files to be imported
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Config absolute path: https://www.npmjs.com/package/vite-tsconfig-paths */
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "assets/*": [
        "assets/*"
      ],
      "components/*": [
        "components/*"
      ],
      "helpers/*": [
        "helpers/*"
      ],
      "pages/*": [
        "pages/*"
      ],
      "styles/*": [
        "styles/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}